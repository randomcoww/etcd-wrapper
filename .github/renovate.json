{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "enabledManagers": [
    "gomod"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDatasources": [
        "golang-version"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}